<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- 
  O VBox é o contêiner principal. Ele empilha os elementos verticalmente.
  O atributo fx:controller conecta este arquivo FXML à sua classe Java.
-->
<VBox 
  fx:controller="com.controller.LancamentosController" 
  alignment="TOP_CENTER" 
  maxHeight="-Infinity" 
  maxWidth="-Infinity" 
  minHeight="-Infinity" 
  minWidth="-Infinity" 
  spacing="15.0" 
  xmlns="http://javafx.com/javafx/21" 
  xmlns:fx="http://javafx.com/fxml/1"
  style="-fx-background-color: #f4f4f4; -fx-padding: 20;">

  <!-- Título da Tela -->
  <Label text="Novo Lançamento Contábil">
    <font>
      <Font name="System Bold" size="24.0" />
    </font>
    <VBox.margin>
      <Insets bottom="10.0" />
    </VBox.margin>
  </Label>

  <!-- 
    GridPane é perfeito para formulários. Ele organiza os componentes
    em uma grade de linhas e colunas, mantendo tudo alinhado.
  -->
  <GridPane hgap="10.0" vgap="12.0">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0" />
    </columnConstraints>
    <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    
    <children>
      <!-- Linha 0: Descrição -->
      <Label text="Descrição:" GridPane.rowIndex="0" />
      <TextField fx:id="campoDescricao" promptText="Ex: Pagamento de fornecedor" GridPane.columnIndex="1" GridPane.rowIndex="0" />

      <!-- Linha 1: Data e Valor -->
      <Label text="Data:" GridPane.rowIndex="1" />
      <HBox spacing="10.0" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="1">
          <DatePicker fx:id="campoData" prefWidth="170.0" promptText="Selecione a data" />
          <Label text="Valor (R$ ):" />
          <TextField fx:id="campoValor" prefWidth="140.0" promptText="Ex: 1500,50" />
      </HBox>

      <!-- Linha 2: Conta de Débito -->
      <Label text="Conta Débito:" GridPane.rowIndex="2" />
      <ComboBox fx:id="comboBoxDebito" prefWidth="350.0" promptText="Selecione a conta a ser debitada" GridPane.columnIndex="1" GridPane.rowIndex="2" />

      <!-- Linha 3: Conta de Crédito -->
      <Label text="Conta Crédito:" GridPane.rowIndex="3" />
      <ComboBox fx:id="comboBoxCredito" prefWidth="350.0" promptText="Selecione a conta a ser creditada" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      
    </children>
  </GridPane>

  <!-- 
    Label para exibir mensagens de erro ou sucesso para o usuário.
    Inicialmente, não terá texto.
  -->
  <Label fx:id="labelErro" alignment="CENTER" minHeight="25.0" textFill="RED">
      <font>
          <Font name="System Bold" size="14.0" />
      </font>
  </Label>

  <!-- Botão para acionar a ação de salvar -->
  <Button 
    mnemonicParsing="false" 
    onAction="#handleSalvarLancamento" 
    prefHeight="40.0" 
    prefWidth="200.0" 
    text="Salvar Lançamento"
    style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;">
    <VBox.margin>
      <Insets top="10.0" />
    </VBox.margin>
  </Button>

</VBox>
