<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controller.LivrorazaoController">
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
                <Label text="Consulta Livro Razão">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Selecione a conta" />
                        <ComboBox fx:id="comboBoxDebito" prefWidth="350.0" promptText="Selecione a conta" />
                        <DatePicker fx:id="campoDatainicio" prefWidth="170.0" promptText="Selecione a data de início" />
                        <DatePicker fx:id="campoDatafinal" prefWidth="170.0" promptText="Selecione a data do fim" />
                        <Button onAction="#buscarDadosData" prefHeight="40.0" prefWidth="200.0" style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Buscar por data" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <TableView fx:id="tabelaLancamentos" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colunaDescricao" prefWidth="150.0" text="Descrição" />
                <TableColumn fx:id="colunaCdata" prefWidth="150.0" text="Data Lançamento" />
                <TableColumn fx:id="colunaValor" prefWidth="150.0" text="Valor" />
                <TableColumn fx:id="colunaContaDebito" prefWidth="150.0" text="Conta Débito" />
                <TableColumn fx:id="colunaContaCredito" prefWidth="150.0" text="Conta Crédito" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="5.0" />
            </BorderPane.margin>
        </TableView>
    </center>
</BorderPane>
