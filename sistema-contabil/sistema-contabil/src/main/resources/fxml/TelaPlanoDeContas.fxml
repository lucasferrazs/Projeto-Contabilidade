<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- O BorderPane é ótimo para layouts com seções (topo, centro, etc.) -->
<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controller.PlanoContasController">
   <top>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets top="15.0" right="15.0" bottom="10.0" left="15.0" />
         </padding>
         <Label text="Consulta de Plano de Contas">
            <font>
               <Font name="System Bold" size="24.0" />
            </font>
         </Label>
         <HBox alignment="BOTTOM_LEFT" spacing="10.0">
            <TextField fx:id="txtBusca" onAction="#handleBuscar" promptText="Digite o código ou a descrição para buscar" HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#handleBuscar" text="Buscar" />
            <Button mnemonicParsing="false" onAction="#handleLimpar" text="Limpar" />
         </HBox>
      </VBox>
   </top>
   <center>
      <TableView fx:id="tabelaContas" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="colunaCodigo" prefWidth="75.0" text="Código" />
          <TableColumn fx:id="colunaDescricao" prefWidth="150.0" text="Descrição" />
          <TableColumn fx:id="colunaSaldo" prefWidth="150.0" text="Saldo" />
          <TableColumn fx:id="colunaGrupo" prefWidth="150.0" text="Grupo" />
          <TableColumn fx:id="colunaSubGrupo" prefWidth="150.0" text="SubGrupo" />
          <TableColumn fx:id="colunaNatureza" prefWidth="150.0" text="Natureza" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <BorderPane.margin>
            <Insets top="5.0" right="15.0" bottom="15.0" left="15.0" />
         </BorderPane.margin>
      </TableView>
   </center>
</BorderPane>
